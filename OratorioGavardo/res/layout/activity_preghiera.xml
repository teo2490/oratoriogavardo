<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099FF" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <WebView
                android:id="@+id/myWebView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="9.44"
                android:background="#0099FF" />

            <Button
                android:id="@+id/bottone2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Padre Nostro" />

            <Button
                android:id="@+id/bottone3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ave Maria" />

            <Button
                android:id="@+id/bottone4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gloria" />

            <Button
                android:id="@+id/bottone5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Angelo di Dio" />

            <Button
                android:id="@+id/bottone7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ti adoro" />

            <Button
                android:id="@+id/bottone6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="44dp"
                android:text="Maria, Madre dei Giovani" />

            <Button
                android:id="@+id/bottone8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Indietro" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>